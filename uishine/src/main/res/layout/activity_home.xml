<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="10dp">
<Button android:id="@+id/btn_control"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:drawableTop="@drawable/bottom_4"
    android:background="#ff3399"
    android:layout_marginRight="10dp"
    android:textSize="14dp"
    android:padding="5dp"
    android:text="控件类"/>
    <Button android:id="@+id/btn_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/bottom_1"
        android:background="#0066ff"
        android:padding="5dp"
        android:textSize="14dp"
        android:text="服务类"/>

</LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/btn_demo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/bottom_2"
        android:background="#cc9900"
        android:textSize="14dp"
        android:padding="5dp"
        android:text="示例"/>
</LinearLayout>
</LinearLayout>

