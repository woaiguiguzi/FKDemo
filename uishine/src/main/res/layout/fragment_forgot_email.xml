<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBlack"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/ask_input_back"
        android:hint="请输入您的账号"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:textColor="@color/colorFont1"
        android:textColorHint="@color/colorFont"
        android:textSize="20dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/ask_input_back"
        android:hint="请输入您绑定的邮箱"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:textColor="@color/colorFont1"
        android:textColorHint="@color/colorFont"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/next_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_bt"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/colorFont1"
        android:textSize="20dp" />

</LinearLayout>

