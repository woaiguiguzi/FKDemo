<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBlack"
    android:orientation="vertical">


    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入您的账号"
        android:textColorHint="@color/colorFont"
        android:background="@drawable/ask_input_back"
        android:gravity="center_vertical"
        android:layout_marginTop="30dp"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:textSize="20dp"
        android:textColor="@color/colorFont1"
        />
    <LinearLayout
        android:id="@+id/phone"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal" >

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/ask_input_back"
            android:hint="请输入你绑定的手机号码"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="@color/colorFont1"
            android:textColorHint="@color/colorFont"
            android:textSize="20dp"
            android:inputType="phone"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_bt"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="获取本机"
            android:textColor="@color/colorFont1"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal" >

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/ask_input_back"
            android:hint="请输入验证码"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textColor="@color/colorFont1"
            android:textColorHint="@color/colorFont"
            android:textSize="20dp"
            android:inputType="number"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_bt"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/colorFont1"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/submit"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_bt"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/colorFont1"
        android:textSize="20dp" />

</LinearLayout>
